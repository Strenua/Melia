    fg[ACTIVE] = "#FFF"
    fg[SELECTED] = "#222"    
        
    bg[NORMAL] = shade (1.0, "#3c3b37")
	bg[PRELIGHT] = shade (1.2, "#3c3b37")
	bg[ACTIVE] = shade (2.2, "#3c3b37")
	bg[SELECTED] = "#4087FF"
}
style "darkbutton" = "dark" {
	xthickness = 0
	ythickness = 0

	bg[NORMAL] = shade (1.0, "#3c3b37")
	bg[PRELIGHT] = shade (1.2, "#3c3b37")
	bg[ACTIVE] = shade (2.2, "#3c3b37")
	bg[SELECTED] = "#4087FF"
	#bg[INSENSITIVE] = mix (0.25, @bg_color, "#e2e1e1")
	#fg[INSENSITIVE] = "#9c9c9c"

	engine "murrine" {
		contrast = 0.0
		border_shades = {1.0, 1.0}
		#textstyle = 1
		glowstyle = 0
		glow_shade = 0.8
		#text_shade = 1.04
	}
}
style "darklabel" = "dark" {
    bg[SELECTED] = "#4087FF"
    fg[SELECTED] = "#000000"
}


